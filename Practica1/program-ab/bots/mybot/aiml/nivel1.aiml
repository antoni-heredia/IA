<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
	<category>
		<pattern> ^ hola ^</pattern>
		<template>Vamos a jugar Quien quieres que le toque adivinar la maquina o el humano</template>
	</category>
	<category>
		<pattern>(el) (la) *</pattern>
		<that>Vamos a jugar Quien quieres que le toque adivinar la maquina o el humano</that>
		<template>De acuerdo adivinara: <set name="topic"> <star/> </set>. Cuando estes listo di: comenzar</template>
	</category>
	<topic name="MAQUINA">
		
		<category>
			<pattern>comenzar</pattern>
			<template>
				<random>
					<li>Que tal, comenzamos? Preguntame sobre las frutas.</li>
					<li>Empezamos? Preguntame sobre las frutas.</li>
					<li>comenzamos? Preguntame sobre las frutas.</li>
					<li>Que tal, Empezamos? Preguntame sobre las frutas.</li>
				</random>
				<think>
					<set name="lista_frutas">
						<readset>frutas</readset>
					</set>
					<set var="cantidad">
						<srai>COUNT 
							<get name="lista_frutas"/>
						</srai>
					</set>
					<set var="pos">
						<srai>RANDOM 
							<get var="cantidad"/>
						</srai>
					</set>
					<set name="elegida">
						<srai>SELECTITEM 
							<get var="pos"/> IN 
							<get name="lista_frutas"/>
						</srai>
					</set>
					<set name="caracteristicas">
						<map name="map_caracteristicas">
							<get name="elegida"/>
						</map>
					</set>
				</think>
			</template>
		</category>
	
		<!-- Patron de ayuda -->
		<category>
			<pattern>(el) (la) * (es) (tiene) (es de) (tamaño) (sabor) (color) (vitamina) *</pattern>
			<template>
				<think>
					<set var="peticion">
						<map name="map_caracteristicas">
							<star/>
						</map>
					</set>
					<set var="existe">
						<srai>FINDITEM 
							<star index="2"/> IN 
							<get var="peticion"/>
						</srai>
					</set>
				</think>

				<condition var="existe">
					<li value="0"> No</li>
					<li>Si</li>
				</condition>

			</template>
		</category>
		<!-- Patron de respuestas -->
		<category>
			<pattern> (la fruta) (el fruto) (es) (tiene) (es de) (tamaño) (sabor) (color) (vitamina) *</pattern>
			<template>
										<get name="caracteristicas"/>

				<think>
					<set var="existe">
						<srai>FINDITEM 
							<star index="1"/> IN 
							<get name="caracteristicas"/>
						</srai>
					</set>
				</think>
				<condition var="existe">
					<li value="0"> No</li>
					<li>Si</li>
				</condition>
			</template>
		</category>
		<!--Patron solucion 	-->
		<category>
			<pattern>(La fruta en la que) (estabas) (estas) (pensando) (es) [la el] *</pattern>
			<template>
				<think>
					<set var="existe">
						<srai>FINDITEM 
							<star index="1"/> IN 
							<get name="elegida"/>
						</srai>
					</set>
				</think>
				<condition var="existe">
					<li value="0"> No</li>
					<li>Si</li>
				</condition>
			</template>
		</category>
	</topic>
	
	<topic name="HUMANO">
	
	</topic>
</aiml>