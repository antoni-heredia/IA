<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
	<category>
		<pattern> ^ hola ^</pattern>
		<template>Vamos a jugar Quien quieres que le toque adivinar la maquina o el humano o prefieres la guia docente</template>
	</category>
	<category>
		<pattern> ^ empezar (nuevo)^</pattern>
		<template>
		<srai>HOLA</srai>
		</template>
	</category>
	<category>
		<pattern>(el) (la) *</pattern>
		<that>Vamos a jugar Quien quieres que le toque adivinar la maquina o el humano o prefieres la guia docente</that>
		
		<template>
			<think>
				<set name="topic"> <star/> </set>
				<set var="eleccion_juego"> <star/></set>
			</think>
			<condition var="eleccion_juego">
				<li value="GUIA DOCENTE"> Hazme preguntas sobre la guia docente:</li>
				<li>De acuerdo vamos le toca adivinar a: <star/>. Preguntame sobre las frutas.
					<srai>COMENZAR</srai>
				</li>
			</condition>
		</template>
	</category>
	<topic name="HUMANO">
		<category>
			<pattern>COMENZAR</pattern>
			<template>
				<think>
					<set name="lista_frutas">
						<readset>frutas</readset>
					</set>
					<set var="cantidad">
						<srai>COUNT 
							<get name="lista_frutas"/>
						</srai>
					</set>
					<set var="pos">
						<srai>RANDOM 
							<get var="cantidad"/>
						</srai>
					</set>
					<set name="elegida">
						<srai>SELECTITEM 
							<get var="pos"/> IN 
							<get name="lista_frutas"/>
						</srai>
					</set>
					<set name="caracteristicas">
						<map name="map_caracteristicas">
							<get name="elegida"/>
						</map>
					</set>
				</think>
			</template>
		</category>
	
		<!-- Patron de ayuda -->
		<category>
			<pattern>(el) (la) * (es) (tiene) (es de) (tamaño) (sabor) (color) (vitamina) *</pattern>
			<template>
				<think>
					<set var="peticion">
						<map name="map_caracteristicas">
							<star/>
						</map>
					</set>
					<set var="existe">
						<srai>FINDITEM 
							<star index="2"/> IN 
							<get var="peticion"/>
						</srai>
					</set>
				</think>

				<condition var="existe">
					<li value="0"> No</li>
					<li>Si</li>
				</condition>

			</template>
		</category>
		<!-- Patron de respuestas -->
		<category>
			<pattern> (la fruta) (el fruto) (es) (tiene) (es de) (tamaño) (sabor) (color) (vitamina) *</pattern>
			<template>

				<think>
					<set var="existe">
						<srai>FINDITEM 
							<star index="1"/> IN 
							<get name="caracteristicas"/>
						</srai>
					</set>
				</think>
				<condition var="existe">
					<li value="0"> No</li>
					<li>Si</li>
				</condition>
			</template>
		</category>
		<!--Patron solucion 	-->
		<category>
			<pattern>(La fruta en la que) (estabas) (estas) (pensando) (es) [la el] *</pattern>
			<template>
				<think>
					<set var="existe">
						<srai>FINDITEM 
							<star index="1"/> IN 
							<get name="elegida"/>
						</srai>
					</set>
				</think>
				<condition var="existe">
					<li value="0"> No</li>
					<li>Si</li>
				</condition>
			</template>
		</category>
	</topic>
</aiml>